{% extends "base.html.twig" %}

{% block body %}

    <div class="row">
        <h2>Top Abstract Wallpapers</h2>
        {% include "home/_best_in_category.html.twig" with { 'images': abstract } %}
    </div>

    <div class="row">
        <h2>Top Summer Wallpapers</h2>
        {% include "home/_best_in_category.html.twig" with { 'images': summer } %}
    </div>

    <div class="row">
        <h2>Top Winter Wallpapers</h2>
        {% include "home/_best_in_category.html.twig" with { 'images': winter } %}
    </div>

    <div class="row">
        <h2>Random Images</h2>


        <div class="row">
            {% for image in random_images %}
                <div class="col-sm-6 col-md-3">
                    <div class="thumbnail">
                        <img src="{{ asset('images/'~image) }}" class="img-thumbnail" alt="...">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
